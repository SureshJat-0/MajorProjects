<div class="container my-5">

    <!-- form section of review  -->
    <hr>
    <form method="POST" action="/listing/<%= listItem.id %>/reviews" class="mb-4">
        <h3 class="mt-4">Leave a Review</h3>
        <div class="mb-3">
            <label for="ratingReview" class="form-label">Rating</label>
            <input name="review[rating]" type="range" min="1" max="5" class="form-range" id="ratingReview" required>
        </div>

        <div class="mb-3">
            <label for="commentRiview" class="form-label">Comments</label>
            <textarea class="form-control" name="review[comment]" id="commentRiview" rows="4" required></textarea>
        </div>

        <div class="mb-3">
            <button class="btn btn-outline-dark">Submit</button>
        </div>

    </form>
    <hr>

    <!-- showin all reviews -->
    <h3 class="my-4">All Reviews</h3>
    <div class="">
        
    </div>

</div>